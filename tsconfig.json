{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "*.tsx",
    "*.ts",
    "*src/**/*.tsx",
    "*src/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
